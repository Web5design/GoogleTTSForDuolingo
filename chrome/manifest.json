{
  "name": "GTTS for Duolingo",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Use the Googleâ„¢ Text-to-Speech engine instead of Duolingo's.",
  "background": {
    "scripts": ["background.js"]
  },
  "icons": { "16": "images/duo-wings-up-16.png",
           "48": "images/duo-wings-up-48.png",
          "128": "images/duo-wings-up-128.png" 
  },
"browser_action": {
    "default_icon": {
      "19": "images/duo-wings-up-19.png",
      "38": "images/duo-wings-up-38.png"
    },
    "default_title": "GTTS For Duolingo"
  },
"permissions": [
      "storage",
      "webRequest",
      "webRequestBlocking",
      "*://*.duolingo.com/*",
      "*://translate.google.com/*"
  ]
}